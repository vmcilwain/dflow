  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "/app"
      // "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "name": "Minitest - current line",
      "type": "Ruby",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "test",
        "${file}:${lineNumber}"
      ]
    }
  ]
}